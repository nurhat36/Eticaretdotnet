@model IEnumerable<ETicaret.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Products</h2>

@if (Model == null || !Model.Any())
{
    <p>No products available.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", "Product", new { id = product.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Product", new { id = product.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create Product</a>
