@model ETicaret.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        @if (!string.IsNullOrEmpty(ViewData["NameError"]?.ToString()))
        {
            <div class="text-danger">@ViewData["NameError"]</div>
        }
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" required />
        @if (!string.IsNullOrEmpty(ViewData["PriceError"]?.ToString()))
        {
            <div class="text-danger">@ViewData["PriceError"]</div>
        }
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>

    <!-- Resim Yükleme Alanı -->
    <div class="form-group">
        <label for="Image">Image</label>
        <input type="file" class="form-control" id="Image" name="image" />
        @if (!string.IsNullOrEmpty(ViewData["ImageError"]?.ToString()))
        {
            <div class="text-danger">@ViewData["ImageError"]</div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
